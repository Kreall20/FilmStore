@model Producer

@{
    ViewData["Title"] = "Delete Producer";
}
@if (User.Identity.IsAuthenticated && User.IsInRole("Admin")){
<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1 style="text-align:center;">Delete confirmation for @Model.FullName</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2" style="display:flex; flex-direction:column;gap:30px;">
                <div class="form-group text-center">
                    <img class="border-info rounded-circle" style="max-width: 150px" id="ProfilePicturePreview" />
                </div>
                <div class="form-group">
                    <label asp-for="ProfilePicture" class="control-label"></label>
                    <input asp-for="ProfilePicture" class="form-control" readonly />
                    <span asp-validation-for="ProfilePicture" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="FullName" class="control-label"></label>
                    <input asp-for="FullName" class="form-control" readonly />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Bio" class="control-label"></label>
                    <input asp-for="Bio" class="form-control" readonly />
                    <span asp-validation-for="Bio" class="text-danger"></span>
                </div>

                <div class="form-group" style="display:flex;justify-content:space-between;margin-top:30px;">
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <input type="submit" value="Confirm" class="btn btn-danger float-right" />
                    </form>
                    <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
                </div>>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            var output = document.getElementById('ProfilePicturePreview');
            output.src = $("#ProfilePictureURL").val();
        })
    </script>
}
                    }
else
{
    <div class="row">
        <div class="col-md-6 offset-3">
            <h1 class="text-info">You've reached the end of the internet</h1>
            <hr />
            <a class="btn btn-outline-success" asp-controller="Movies" asp-action="Index">Home Page</a>
        </div>
    </div>
}